# Socket.IO signaling server URL (used for WebRTC signaling)
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# hCaptcha site key for bot protection
# Get your site key from https://www.hcaptcha.com/
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=your-hcaptcha-site-key-here

# Clerk Authentication
# Get your keys from https://clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key-here
CLERK_SECRET_KEY=your-clerk-secret-key-here

# Ably Real-time Chat
# Get your API key from https://ably.com/
NEXT_PUBLIC_ABLY_API_KEY=your-ably-api-key-here

# Supabase (for chat message logging)
# Get your credentials from https://supabase.com/
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your-supabase-anon-key
# Direct database connection URL (optional, for server-side operations)
SUPABASE_DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres
